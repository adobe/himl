{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "non-major dependencies",
      "groupSlug": "non-major",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": false
    },
    {
      "groupName": "major dependencies",
      "groupSlug": "major",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    }
  ],
  "labels": [
    "dependencies"
  ]
}
